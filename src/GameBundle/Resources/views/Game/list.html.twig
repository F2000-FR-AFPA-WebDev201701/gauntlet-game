<div>
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Status</th>
                <th>Name</th>
                <th>Created Date</th>
                <th>Number player</th>
                <th>Action</th>
            </tr>
        </thead>
    {% for i in game %}
        <tr>
            <td>{{ i.id }}</td>
            <td>{{ i.status }}</td>
            <td>{{ i.nameRoom }}</td>
            <td>{{ i.date.date }}</td>
            <td>{{ i.nbPlayerMax }}</td>
            {% if(app.session.get('user')) %}
            <td ><a href="{{ path('game_game_join', {'id': i.id}) }}">Rejoindre</a></td>
            {% endif %}
        </tr>
    {% endfor %}
    </table>
</div>
