<div class="col-xs-offset-1 col-xs-10">
    <table class="table table-responsive table-hover text-center">
        <thead >
            <tr >
                <th class="text-center">ID</th>
                <th class="text-center">Status</th>
                <th class="text-center">Nom de la salle</th>
                <th class="text-center">Cr√©ation</th>
                <th class="text-center">Nombre de joueurs</th>
                <th class="text-center">Hi Score</th>
                <th class="text-center">Action</th>
            </tr>
        </thead>
        {% for i in game %}
            {% if i.status == 2 %}
                {% set btnJoin = 'btn-danger' %}
                {% set pathJoin = '#game-section' %}
                {% set disableJoin = 'disabled="disabled"' %}
            {% else %}
                {% set btnJoin = 'btn-success' %}
                {% set pathJoin = path('game_game_join', {'id': i.id}) %}
                {% set disableJoin = '' %}
            {% endif %}
            <tbody>
                <tr>
                    <td>{{ i.id }}</td>
                    <td>{{ i.status }}</td>
                    <td>{{ i.nameRoom }}</td>
                    <td>{{ i.date.date }}</td>
                    <td>{{ i.nbPlayerMax }}</td>
                    <td>{{ i.score }}</td>
                    {% if(app.session.get('user')) %}
                        <td ><a class="btn {{ btnJoin }}" href="{{ pathJoin }}" {{ disableJoin }}>Rejoindre</a></td>
                    {% endif %}
                </tr>
            </tbody>
        {% endfor %}
    </table>
</div>
