{% extends "::base.html.twig" %}

{% block title %}GameBundle:Game:list{% endblock %}

{% block body %}
<h1>Welcome to the Game:list page</h1>
    <table>
        <tr>
            <th>ID</th>
            <th>Status</th>
            <th>Name</th>
            <th>Created Date</th>
            <th>Number player</th>
        </tr>
    {% for i in game %}
        <tr>
            <td>{{ i.id }}</td>
            <td>{{ i.status }}</td>
            <td>{{ i.nameRoom }}</td>
            <td>{{ i.date.date }}</td>
            <td>{{ i.nbPlayerMax }}</td>

        </tr>
    {% endfor %}
    </table>
{% endblock %}
