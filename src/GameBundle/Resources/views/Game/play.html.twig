<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>GantletPHP</title>
        <link rel="stylesheet" type="text/css" href="{{ asset('stylesheet/stylemap.css') }}" />
        <link href="https://fonts.googleapis.com/css?family=Press+Start+2P" rel="stylesheet">
        <link rel="stylesheet" type="text/css" href="{{ asset('bootstrap-3.3.7-dist/css/bootstrap.min.css') }}" />
        <script src="{{ asset('js/jquery-3.1.1.min.js') }}"></script>
    </head>
    <body>
        <div class="content">
            <aside class="infogame">
                <img class="infogame-logo" src="{{ asset('images/gant.png') }}" alt=""/>
                <div class="infogame-player">
                    <h1> {{ app.session.get('user').pseudo }} </h1>
                    <h2> Vie : </h2>
                    <p> XX Vie </p>
                    <h2>Score</h2>
                    <p> XX Points </p>
                    <h2>Items récupérés</h2>
                </div>

            </aside>
            <div class="plateau">
                {% include 'GameBundle:Map:map.html.twig' %}
            </div>
       
            <script type="text/javascript">
                $(document).ready(function () {
                    // Votre code ici avec les appels à la fonction $()
                    $(document).keydown(function (e) {
                        switch (e.which) {
                            case 37: // left
                                moveDirection = 4;
                                break;
                            case 38: // up
                                moveDirection = 1;
                                break;
                            case 39: // right
                                moveDirection = 2;
                                break;
                            case 40: // down
                                moveDirection = 3;
                                break;
                            default:
                                return; // exit this handler for other keys
                        }

                        $.ajax({
                            url: '{{ path('game_game_play', {'id': idGame, 'action': 'move'}) }}' + '/' + moveDirection, // La ressource ciblée
                            type: 'POST', // Le type de la requête HTTP.
                            dataType: 'html',
                            success: function (code_html, statut) {

                                //alert(code_html);
                                $(".plateau").html(code_html);

                            },
                            error: function (resultat, statut, erreur) {

                            },
                            complete: function (resultat, statut) {

                            }
                        });  // end ajax

                        e.preventDefault(); // prevent the default action (scroll / move caret)
                    });
                });
            </script>
        </div>
    </div>
</body>
</html>