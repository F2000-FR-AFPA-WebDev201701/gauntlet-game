{% extends "@Game/Template/layout.html.twig" %}
{% block content %}
    <div class="col-xs-offset-1 col-xs-10 col-md-offset-3 col-md-6">
        <table class="table table-bordered ">
            <thead>
                <tr>
                    <th>Status</th>
                    <td>{{game.statusText }}</td>
                </tr>

                <tr>
                    <th>Nom de la Room</th>
                    <td>{{game.nameRoom }}</td>
                </tr>
                <tr>
                    <th>Cr√©ation Date</th>
                    <td>{{game.date|date('d-m-Y H:i:s') }} </td>
                </tr>
                <tr>
                    <th>Nombre de joueurs</th>
                    <td>{{nbusers}} / {{game.nbPlayerMax }}</td>
                </tr>
                <tr>
                    <td colspan="2" style="padding: 0;" >
                        {% if(app.session.get('user')) %}
                            {% if((nbusers) < (game.nbPlayerMax)) %}
                                <a  disabled="disabled" class=" text-center button-default" style="display: block; width: 100%; margin: 0;" href="{{ path('game_game_play', {'id': game.id , 'action': 'init'}) }}">
                                    En attente de joueurs
                                </a>
                            {% else %}
                                <a   class=" text-center btn btn-success" style="display: block; width: 100%; margin: 0;" href="{{ path('game_game_play', {'id': game.id , 'action': 'init'}) }}">
                                    Lancer
                                </a>
                            {% endif %}
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <td colspan="2" style="padding: 0;" >
                        {% if(app.session.get('user')) %}
                            <a class="text-center btn btn-danger btn-block" style="display: block; width: 100%; margin: 0;" href="{{ path('game_game_delete', {'id': game.id}) }}">
                                Supprimer
                            </a>
                        {% endif %}
                    </td>
                </tr>
            </thead>
        </table>
    </div>
{% endblock %}
