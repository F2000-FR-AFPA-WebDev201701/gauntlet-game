<div>
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Status</th>
                <th>Name</th>
                <th>Created Date</th>
                <th>Number player</th>
                <th>Action</th>
            </tr>
        </thead>
        <tr>
            <td>{{game.id }}</td>
            <td>{{game.status }}</td>
            <td>{{game.nameRoom }}</td>
            <td>{{game.date.date }}</td>
            <td>{{game.nbPlayerMax }}</td>
            {% if(app.session.get('user')) %}
                <td ><a href="{{ path('game_game_play', {'id': game.id}) }}">Lancer</a></td>
            {% endif %}
        </tr>

    </table>
</div>
