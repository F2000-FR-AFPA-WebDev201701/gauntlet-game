{% if app.user %}
    <p>Username: {{ app.user.pseudo }}</p>
    <p><a href="{{ path('user_logout') }}">Logout</a></p>
    <p><a href="{{ path('user_profil') }}">Profil</a></p>
{% else %}
    {% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}
    {{ form_start(form)}}
    {{ form_widget(form) }}
    {{ form_start(form)}}    
{% endif %}

